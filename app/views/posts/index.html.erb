<div id ="title">
<h1>welcome to Undefined Acebook</h1>
</div>
<div id="posts">
  <% @posts.each do |post| %>
    <h3><%= post.message %></h3>
    <p>created at <%= post.created_at %></p>
    <p> by <%= post.user.email %></p>
    <p><%= link_to "Edit this post", edit_post_path(post) %></p>

    <p><%= link_to "Delete this post", post_path(post), 
    method: :delete, data: {confirm: 'Are you sure?'}, 
    :class => 'btn btn-outline-danger btn-sm' %></p>
  <% end %>
</div>
<div>
  <%= link_to new_post_path do %>
  New post
  <% end %>
</div>
<br>
<div>
  <% if user_signed_in? %>
    <%= link_to('Logout', destroy_user_session_path, method: :delete) %>        
  <% else %>
    <%= link_to('Login', new_user_session_path) %>  
  <% end %>
</div> 