        <span id="loggedinas"> Logged in as <span id="email"> <%= current_user.email %> </span></span>
          
          <div id="bannerbuttons"><form class="form-inline">
            <button class="btn btn-outline-success" type="button"><%= link_to posts_path do%> Home feed<% end %></button>
            <button class="btn btn-outline-secondary" type="button">  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>   </button>
          </form></div>

